<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/reserva_image"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/logo_sf_nuevo" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/direccion_inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dirección de inicio"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/direccion_destino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dirección de destino" />

        <TextView
            android:id="@+id/fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha" />

        <TextView
            android:id="@+id/horario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horario" />

        <TextView
            android:id="@+id/metodo_pago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Método de pago" />
    </LinearLayout>
</LinearLayout>
